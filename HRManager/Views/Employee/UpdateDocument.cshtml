@model HRManager.Models.ViewModels.EmployeeDocumentModels

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdateDocument</title>
</head>
<body>

<h4>Documents</h4>
<hr />
<div class="row">
    <div class="col-md-4">
