@model HRManager.Models.EntityViews.EmployeeDocument;


@{
<div class="page-header">
    <div class="row">
        <div class="col-lg-12">
            <h1>Document Details</h1>
        </div>
    </div>
</div>
    <div class="form-group">
        <partial name="_DocumentInfo.cshtml">

         <input type='button' value='Add' id='AddDocumentButton'/> 
         <input type='button' value='Edit' id='UpdateDocumentButton'/> 
         <input type='button' value='Delete' id='DeleteDocumentButton'/>
         @*<button type="button" class="btn btn-primary">Add</button>
   
         <button type="button" class="btn btn-secondary">Update</button>*@
    </div>
}

@section Scripts
 {           
    <script>
        $(document).ready(function () {
        $("#AddDocumentButton").OnClick(function (){
            document.location ='Employee/AddDocument';
                });
         $("#UpdateDocumentButton").OnClick(function (){
            document.location ='Employee/UpdateDocument';
                });
         $("#DeleteDocumentButton").OnClick(function (){
            document.location ='Employee/DeleteDocument';
                });
        });
   
    </script>

 }