@model HRManager.Models.EntityViews.EmployeePersonalInfo

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Edit Your Personal Details</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Employee" asp-action="UpdatePersonalInfo" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label">
                <span>First Name<sup class="star" style="color:red;">*</sup></span>
                </label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="MiddleName" class="control-label"></label>
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="LastName" class="control-label"><span>Last Name<sup class="star" style="color:red;">*</sup></span></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Gender" class="control-label"><span>Gender<sup class="star" style="color:red;">*</sup></span></label>
                <span style="font-size:20px">
                @Html.DropDownListFor(m => m.Gender, new SelectList(Enum.GetValues(typeof(Gender))),"Select Gender")
                </span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"><span>Date Of Birth<sup class="star" style="color:red;">*</sup></span></label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="MobileNumber" class="control-label"><span>Mobile Number<sup class="star" style="color:red;">*</sup></span></label>
                <input asp-for="MobileNumber" class="form-control" />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="PersonalEmailId" class="control-label"><span>Personal Email Id<sup class="star" style="color:red;">*</sup></span></label>
                <input asp-for="PersonalEmailId" class="form-control" />
                <span asp-validation-for="PersonalEmailId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="CurrentAddress" class="control-label"><span>Current Address<sup class="star" style="color:red;">*</sup></span></label>
                <input asp-for="CurrentAddress" class="form-control" />
                <span asp-validation-for="CurrentAddress" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="PermanentAddress" class="control-label"><span>Permanent Address<sup class="star" style="color:red;">*</sup></span></label>
                <input asp-for="PermanentAddress" class="form-control" />
                <span asp-validation-for="PermanentAddress" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="BloodGroup" class="control-label"><span>Blood Group<sup class="star" style="color:red;">*</sup></span></label>
                @Html.DropDownListFor(m => m.BloodGroup, new SelectList(Enum.GetValues(typeof(BloodGroup))),"Select Blood Group")
            </div>
            <br />
            <div class="form-group">
                <label asp-for="EmergencyContactName" class="control-label"><span>Emergency Contact Name<sup class="star" style="color:red;">*</sup></span></label>
                <input asp-for="EmergencyContactName" class="form-control" />
                <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="EmergencyContactNumber" class="control-label"><span>Emergency Contact Number<sup class="star" style="color:red;">*</sup></span></label>
                <input asp-for="EmergencyContactNumber" class="form-control" />
                <span asp-validation-for="EmergencyContactNumber" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="RelationshipWithContact" class="control-label"><span>Relationship With Contact<sup class="star" style="color:red;">*</sup></span></label>
                @Html.DropDownListFor(m => m.RelationshipWithContact, new SelectList(Enum.GetValues(typeof(EmergencyContact))),"Relationship Type")
                <span asp-validation-for="RelationshipWithContact" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="PanCardNumber" class="control-label"><span>PAN Card Number<sup class="star" style="color:red;">*</sup></span></label>
                <input asp-for="PanCardNumber" class="form-control" />
                <span asp-validation-for="PanCardNumber" class="text-danger"></span>
