                <div class="form-group">
                    <label asp-for="@Model.employeeFileDocuments.SSCOrEquivalent" class="control-label"></label>
                    <input asp-for="@Model.employeeFileDocuments.SSCOrEquivalent" class="custom-file-input" />
                    <span asp-validation-for="@Model.employeeFileDocuments.SSCOrEquivalent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.employeeFileDocuments.IntermediateOrEquivalent" class="control-label"></label>
                    <input asp-for="@Model.employeeFileDocuments.IntermediateOrEquivalent" class="custom-file-input" />
