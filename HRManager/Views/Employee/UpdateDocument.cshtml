                </div>
                <div class="form-group">
                    <label asp-for="@Model.employeeFileDocuments.PanCard" class="control-label"></label>
                    <input asp-for="@Model.employeeFileDocuments.PanCard" class="custom-file-input" />
                    <span asp-validation-for="@Model.employeeFileDocuments.PanCard" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.employeeFileDocuments.AadharCard" class="control-label"></label>
                    <input asp-for="@Model.employeeFileDocuments.AadharCard" class="custom-file-input" />
                    <span asp-validation-for="@Model.employeeFileDocuments.AadharCard" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.employeeFileDocuments.Passport" class="control-label"></label>
                    <input asp-for="@Model.employeeFileDocuments.Passport" class="custom-file-input" />
                    <span asp-validation-for="@Model.employeeFileDocuments.Passport" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.employeeFileDocuments.VoterId" class="control-label"></label>
                    <input asp-for="@Model.employeeFileDocuments.VoterId" class="custom-file-input" />
                    <span asp-validation-for="@Model.employeeFileDocuments.VoterId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.employeeFileDocuments.CurrentAddressProof" class="control-label"></label>
                    <input asp-for="@Model.employeeFileDocuments.CurrentAddressProof" class="custom-file-input" />
                    <span asp-validation-for="@Model.employeeFileDocuments.CurrentAddressProof" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.employeeFileDocuments.PermanentAddressProof" class="control-label"></label>
                    <input asp-for="@Model.employeeFileDocuments.PermanentAddressProof" class="custom-file-input" />
                    <span asp-validation-for="@Model.employeeFileDocuments.PermanentAddressProof" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.employeeFileDocuments.FathersAadharCard" class="control-label"></label>
                    <input asp-for="@Model.employeeFileDocuments.FathersAadharCard" class="custom-file-input" />
                    <span asp-validation-for="@Model.employeeFileDocuments.FathersAadharCard" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.employeeFileDocuments.MothersAadharCard" class="control-label"></label>
                    <input asp-for="@Model.employeeFileDocuments.MothersAadharCard" class="custom-file-input" />
                    <span asp-validation-for="@Model.employeeFileDocuments.MothersAadharCard" class="text-danger"></span>
                </div>
