            </div>
            <br />
            <div class="form-group">
                <label asp-for="AadharCardNumber" class="control-label"><span>Aadhar Card Number<sup class="star" style="color:red;">*</sup></span></label>
                <input asp-for="AadharCardNumber" class="form-control" />
                <span asp-validation-for="AadharCardNumber" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="FathersNameAsPerAadhar" class="control-label"><span>Fathers Name As PerAadhar<sup class="star" style="color:red;">*</sup></span></label>
                <input asp-for="FathersNameAsPerAadhar" class="form-control" />
                <span asp-validation-for="FathersNameAsPerAadhar" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="FathersMobileNumber" class="control-label"><span>Fathers Mobile Number<sup class="star" style="color:red;">*</sup></span></label>
                <input asp-for="FathersMobileNumber" class="form-control" />
                <span asp-validation-for="FathersMobileNumber" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="MothersNameAsPerAadhar" class="control-label"><span>Mothers Name As Per Aadhar<sup class="star" style="color:red;">*</sup></span></label>
                <input asp-for="MothersNameAsPerAadhar" class="form-control" />
                <span asp-validation-for="MothersNameAsPerAadhar" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
@*                <input type="submit" value="Back" class="btn btn-primary" asp-action="Index"/>
*@                <input type="submit" value="Save" class="btn btn-primary" style="float: right;"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}