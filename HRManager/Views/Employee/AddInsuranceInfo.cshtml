@model HRManager.Models.EntityViews.EmployeeInsuranceInfo

<h4>Add Insurance Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="_AddInsuranceInfo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameAsPerAadhar" class="control-label"></label>
                <input asp-for="NameAsPerAadhar" class="form-control" />
                <span asp-validation-for="NameAsPerAadhar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Relationship" class="control-label"></label>
                <input asp-for="Relationship" class="form-control" />
                <span asp-validation-for="Relationship" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirthAsPerAadhar" class="control-label"></label>
                <input asp-for="DateOfBirthAsPerAadhar" class="form-control" />
                <span asp-validation-for="DateOfBirthAsPerAadhar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
