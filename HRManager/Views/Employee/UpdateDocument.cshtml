                    <input asp-for="@Model.employeeFileDocuments.AdvancedDiplomaIfAny" class="custom-file-input" />
                    <span asp-validation-for="@Model.employeeFileDocuments.AdvancedDiplomaIfAny" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.employeeFileDocuments.ProfessionalCertificationsIfAny" class="control-label"></label>
                    <input asp-for="@Model.employeeFileDocuments.ProfessionalCertificationsIfAny" class="custom-file-input" />
                    <span asp-validation-for="@Model.employeeFileDocuments.ProfessionalCertificationsIfAny" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save & Continue" class="btn btn-primary"/>
                </div>
        </form>
        }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
