@model HRManager.Models.EntityViews.EmployeeProfessionalInfo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdateProfessionalInfo</title>
</head>
<body>

<h4>EmployeeProfessionalInfo</h4>
<hr />
    @if (Model is not null)
    {
        <div class="col">
            <div class="row-md-4">
                <form asp-action="UpdateProfessionalInfo">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    foreach(var item in Model)
                    {
                    <div class="form-group">
                        <label asp-for="OrganizationName" class="control-label"></label>
                        <input asp-for="OrganizationName" class="form-control" />
                        <span asp-validation-for="OrganizationName" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsThisYourLastEmployment" /> 
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastDesignation" class="control-label"></label>
                        <input asp-for="LastDesignation" class="form-control" />
                        <span asp-validation-for="LastDesignation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CTC" class="control-label"></label>
                        <input asp-for="CTC" class="form-control" />
                        <span asp-validation-for="CTC" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReportingManagerName" class="control-label"></label>
                        <input asp-for="ReportingManagerName" class="form-control" />
                        <span asp-validation-for="ReportingManagerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReportingManagerEmailId" class="control-label"></label>
                        <input asp-for="ReportingManagerEmailId" class="form-control" />
                        <span asp-validation-for="ReportingManagerEmailId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HRName" class="control-label"></label>
                        <input asp-for="HRName" class="form-control" />
                        <span asp-validation-for="HRName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HREmailId" class="control-label"></label>
                        <input asp-for="HREmailId" class="form-control" />
                        <span asp-validation-for="HREmailId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OfferLetterPath" class="control-label"></label>
                        <input asp-for="OfferLetterPath" class="form-control" />
                        <span asp-validation-for="OfferLetterPath" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RelievingLetterPath" class="control-label"></label>
                        <input asp-for="RelievingLetterPath" class="form-control" />
                        <span asp-validation-for="RelievingLetterPath" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExperienceLetterPath" class="control-label"></label>
                        <input asp-for="ExperienceLetterPath" class="form-control" />
                        <span asp-validation-for="ExperienceLetterPath" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PaySlip1" class="control-label"></label>
                        <input asp-for="PaySlip1" class="form-control" />
                        <span asp-validation-for="PaySlip1" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PaySlip2" class="control-label"></label>
                        <input asp-for="PaySlip2" class="form-control" />
                        <span asp-validation-for="PaySlip2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PaySlip3" class="control-label"></label>
                        <input asp-for="PaySlip3" class="form-control" />
                        <span asp-validation-for="PaySlip3" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReferenceEmailId" class="control-label"></label>
                        <input asp-for="ReferenceEmailId" class="form-control" />
                        <span asp-validation-for="ReferenceEmailId" class="text-danger"></span>
                    </div>
                    }
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    }
    @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
