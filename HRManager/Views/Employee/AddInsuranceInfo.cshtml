@model HRManager.Models.EntityViews.EmployeeInsuranceInfo

<div class="card border-primary col-sm-5 mx-auto" >
<div class="card-header bg-primary">
<h3 class="text-center">Insurance Details</h3>
</div>
  <div class="card-body align-items-center">
  <div class="row">
        <div class="col-md-12">
            <form asp-action="AddInsuranceInfo">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NameAsPerAadhar" class="control-label"><span>Name As Per Aadhar<sup class="star" style="color:red;">*</sup></span></label>
                    <input asp-for="NameAsPerAadhar" class="form-control" />
                    <span asp-validation-for="NameAsPerAadhar" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="DateOfBirthAsPerAadhar" class="control-label"><span>Date Of Birth As Per Aadhar<sup class="star" style="color:red;">*</sup></span></label>
                    <input asp-for="DateOfBirthAsPerAadhar" class="form-control" />
                    <span asp-validation-for="DateOfBirthAsPerAadhar" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Relationship" class="control-label"><span>Relationship<sup class="star" style="color:red;">*</sup></span></label>
                    <select class="form-select" aria-label="Default select example" asp-for="Relationship"  asp-items="Html.GetEnumSelectList<Relationship>()">
                        <option selected></option>
                    </select>
                    <span asp-validation-for="Relationship" class="text-danger"></span>
                </div>
                <br />
                 <div class="form-group">
                    <label asp-for="Gender" class="control-label"><span>Gender<sup class="star" style="color:red;">*</sup></span></label>
                    <select class="form-select" aria-label="Default select example" asp-for="Gender"  asp-items="Html.GetEnumSelectList<Gender>()">
                        <option selected>Select</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group; text-center">
                    <input type="submit" value="Save" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
