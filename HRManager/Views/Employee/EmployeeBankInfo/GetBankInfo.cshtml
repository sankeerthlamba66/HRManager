@model HRManager.Models.EntityViews.EmployeeBankInfo;

@{
<div class="page-header">
    <div class="row">
        <div class="col-lg-12">
            <h1>Bank Details</h1>
        </div>
    </div>
</div>

    <div class="form-group">
      <partial name="_BankInfo.cshtml">
         <input type='button' value='Add' id='AddBankInfoButton'/> 
         <input type='button' value='Edit' id='UpdateBankInfoButton'/> 
         <input type='button' value='Delete' id='DeleteBankInfoButton'/>
         @*<button type="button" class="btn btn-primary">Add</button>
    
         <button type="button" class="btn btn-secondary">Update</button>*@
    </div>
}

@section Scripts
 {           
    <script>
        $(document).ready(function () {
        $("#AddBankInfoButton").OnClick(function (){
            document.location ='Employee/PostBankInfo';
                });
         $("#UpdateBankInfoButton").OnClick(function (){
            document.location ='Employee/PutBankInfo';
                });
         $("#DeleteBankInfoButton").OnClick(function (){
            document.location ='Employee/DeleteBankInfo';
                });
        });
   
    </script>

 }
